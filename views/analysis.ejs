<!DOCTYPE html>
<html>
  <head>
  	<meta chartset="UTF-8">
    <title>Divide</title>
    
    <!-- Vue.js    -->
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    
    <!-- Bootstrap -->
    <link href="http://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap-theme.css">
    
    <!-- Css -->
    <link rel='stylesheet' href='/stylesheets/datastyle.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          </button>
          <a class="navbar-brand" href="/">Divide</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/data">data</a></li>
            <li class="active"><a href="/analysis">analysis</a></li>
            <li><a href="#">xxx</a></li>
            <li><a href="#">xxx</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <form id='editfile' method='post' action='/upload' enctype='multipart/form-data'>
      <input name="avatar" id='upfile' type='file'/>
      <br/>
      <button type='submit' class="btn btn-primary">提交文件</button>
    </form>
   
    <br/>
    <br/>

    <form id="findop">
        <button type="submit" v-bind:class="[baseClass, statusClass]" v-bind:disabled="isDisable" v-on:click="searchData">开始分析！</button>
    </form>

    <div class="table-responsive">
        <table id="findtable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>词语</th>
                    <th>词频</th>
                    <th>左右熵</th>
                    <th>互信息</th>
                    <th>位置成词概率</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in items">
                    <td>{{ item.word }}</td>
                    <td>{{ item.freq }}</td>
                    <td>{{ item.entro }}</td>
                    <td>{{ item.info }}</td>
                    <td>{{ item.prob }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- this is the bind scripts -->
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <!-- 注意bind的js必须放在页面的最后 -->
    <script src="/javascripts/bind/analysis.js"></script>
  </body>
</html>
    